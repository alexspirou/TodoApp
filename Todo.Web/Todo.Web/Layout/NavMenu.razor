@using Todo.Shared.Responses
@using Todo.Web.Common;
@using Todo.Web.Services.Interfaces

@inject ITodoMangerService TodoEntriesService

<div class="sidenav">
    <ul>
        <li><a @onclick="OnHomeIsClicked">Home</a></li>
        <li>
            <a @onclick="OnMyTasksIsClicked">My Tasks</a>
            @if (_categories != null)
            {
                <ul class="sub-menu">
                    @foreach (var category in _categories)
                    {
                        <li> <a  @onclick="() => OnCategorySubMenuClicked(category)"> @category.Name </a></li>
                    }
                </ul>
            }
        </li>
    </ul>
</div>
